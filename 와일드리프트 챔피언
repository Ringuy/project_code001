def game_attack_route():
    print("맡은 공격로: 중단")

def game_attack_route_countdown(time_sec):
    while time_sec:
        mins, secs = divmod(time_sec, 60)
        timeformat = '{:}'.format(secs, mins)
        print(timeformat, end='')
        time.sleep(1)
        time_sec-= 1
        print()

